@model SalesWebMVC.Models.Seller

@{
    ViewData["Title"] = "Create";
}

<h4>@ViewData["Title"]</h4>

<h5>Seller</h5>
<hr/>
<div class="row">
    <div class="col-md-4">
        <div class="card p-4">
            <form asp-action="Create">
                <div>
                    <label asp-for="Name" class="col-form-label"></label>
                    <input asp-for="Name" class="form-control"/>
                </div>
                <div>
                    <label asp-for="Email" class="col-form-label"></label>
                    <input asp-for="Email" class="form-control" type="email"/>
                </div>
                <div>
                    <label asp-for="BirthDate" class="col-form-label"></label>
                    <input asp-for="BirthDate" class="form-control" type="date"/>
                </div>
                <div>
                    <label asp-for="BaseSalary" class="col-form-label"></label>
                    <input asp-for="BaseSalary" class="form-control"/>    
                </div>
                <div>
                    <input type="submit" value="Create" class="btn btn-outline-primary my-3" />
                </div>
            </form>
        </div>
    </div>
</div>